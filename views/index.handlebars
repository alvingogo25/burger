<h1>Burger Time</h1>
<!-- burgers list -->
<div class="burgerslist">
  <!-- uneaten bugers -->
  <div class="burgers">
    <h2>Uneaten</h2>
    {{#each burgers}}
      {{#unless devoured}}
        <div class="burger shadow">
          <span>{{burger_name}}</span>
          <button class="eat" data-id="{{id}}">Eat it!</button>
        </div>
      {{/unless}}
    {{/each}}
  </div>

  <!-- eaten burgers -->
  <div class="burgers">
    <h2>Eaten</h2>
    {{#each burgers}}
      {{#if devoured}}
        <div class="burger shadow">
          <span>{{burger_name}}</span>
          <button class="remove" data-id="{{id}}">Remove</button>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>

<!-- new burger submit box -->
  <div class="newburger">
    <h2>Add a Burger</h2>
    <form class="add-new" action="/api/burgers" method="post">
      <textarea class="shadow" name="burger_name" rows="8" cols="50" placeholder="Enter Burger Here!"></textarea>
      <br>
      <button class="shadow" type="submit" name="button">Submit</button>
    </form>
  </div>
